interval = 600
label = %output%

format-underline = ${xrdb:color5}
format-foreground = #ffffff
format-padding = 2

[module/i3]
type = internal/i3
index-sort = true
pin-workspaces = true
wrapping-scroll = true
strip-wsnumbers = true
;reverse-scroll = false
;enable-scroll = false
enable-click = true

;format = <label-state> <label-mode>

